<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/barbearia22">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logotipofinal"
        android:contentDescription="Logo da empresa"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="326dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        style="@style/Text_View"
        android:fontFamily="sans-serif-medium"
        android:text="Email"
        android:textColor="#2c2c2c"
        app:layout_constraintBottom_toTopOf="@id/campo_usuario"
        app:layout_constraintStart_toStartOf="@id/containerComponents" />

    <EditText
        style="@style/Edit_Text"
        android:hint="email@exemplo.com"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/campo_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents"/>

    <EditText
        style="@style/Edit_Text"
        android:hint="●●●●●●●"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/campo_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/campo_usuario"
        android:inputType="textPassword"
        />

    <TextView
        style="@style/Text_View"
        android:text="Senha"
        android:fontFamily="sans-serif-medium"
        android:textColor="#2c2c2c"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintBottom_toTopOf="@id/campo_senha"/>


    <TextView
        android:id="@+id/botao_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem conta? Cadastre-se"
        android:fontFamily="sans-serif-medium"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:textColor="#2c2c2c"
        android:linksClickable="true"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/botao_entrar"/>

    

    <Button
        android:id="@+id/botao_entrar"
        android:fontFamily="sans-serif-medium"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="#006e65"
        android:textColor="#FFFFFF"
        android:text='ENTRAR'
        android:background="@drawable/botao_redondo"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/campo_senha"/>








</androidx.constraintlayout.widget.ConstraintLayout>
