<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#2A0200">


    <ImageView
        android:id='@+id/logo'
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src='@drawable/logotipofinal'
        android:contentDescription="Logo da empresa"
        android:layout_marginBottom="32dp"
        />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        android:padding='12dp'
        android:background='@android:drawable/editbox_background'
        android:backgroundTint="#C18D3E"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"
        />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="#C18D3E"
        android:textStyle="bold"
        android:textColorHint="#FFFFFF"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox_lembrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lembrar"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/texto_esqueceu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceu a senha?"
            android:textSize="14sp"
            android:textColor="#CCCC"
            android:textStyle="bold"
            android:gravity="end"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <Button
        android:id="@+id/botao_entrar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="#C18D3E"
        android:textColor="#FFFFFF"
        android:text='ENTRAR'
        android:background="@drawable/botao_redondo"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou"
        android:layout_margin='12dp'
        android:textColor="#FFFFFF"
        android:background='@android:color/transparent'
        />

    <Button
        android:id="@+id/botao_func"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="#C18D3E"
        android:textColor="#FFFFFF"
        android:text='FUNCIONARIO'
        android:background="@drawable/botao_redondo"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/botao_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ£o possui uma conta? Cadastre-se"
        android:textStyle="italic"
        android:clickable="true"
        android:layout_marginTop="100dp"
        android:focusable="true"
        android:textColor="#CCCC"
        android:linksClickable="true"
        />

</LinearLayout>